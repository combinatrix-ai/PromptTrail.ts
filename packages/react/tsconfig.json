  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
